<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/interstitial_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000">


    <!-- Content Container -->
    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/ad_padding_large"
        android:background="?attr/selectableItemBackground">

        <!-- Ad Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ad_margin_medium"
            app:cardCornerRadius="@dimen/ad_corner_radius_large"
            app:cardElevation="@dimen/ad_elevation_large"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/ad_padding_xlarge">

                <!-- Media Container -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@drawable/ad_media_background">

                    <ImageView
                        android:id="@+id/ad_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/ad_image_description"
                        android:visibility="gone" />

                    <VideoView
                        android:id="@+id/ad_video"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" />

                    <!-- Loading Progress -->
                    <ProgressBar
                        android:id="@+id/loading_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:indeterminateTint="@color/ad_primary_color" />

                </FrameLayout>

                <!-- Ad Title -->
                <TextView
                    android:id="@+id/ad_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/ad_text_size_xlarge"
                    android:textStyle="bold"
                    android:textColor="@color/ad_text_primary"
                    android:gravity="center"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginTop="@dimen/ad_margin_large" />

                <!-- Ad Description -->
                <TextView
                    android:id="@+id/ad_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/ad_text_size_medium"
                    android:textColor="@color/ad_text_secondary"
                    android:gravity="center"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:layout_marginTop="@dimen/ad_margin_small" />

                <!-- CTA Button -->
                <TextView
                    android:id="@+id/ad_cta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ad_cta_default"
                    android:textSize="@dimen/ad_text_size_large"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/ad_cta_button_background"
                    android:gravity="center"
                    android:padding="@dimen/ad_padding_large"
                    android:layout_marginTop="@dimen/ad_margin_large"
                    android:elevation="@dimen/ad_elevation_medium" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Close Button -->
    <ImageButton
        android:id="@+id/close_button"
        android:layout_width="@dimen/ad_close_button_size"
        android:layout_height="@dimen/ad_close_button_size"
        android:layout_gravity="top|end"
        android:layout_margin="@dimen/ad_margin_medium"
        android:src="@drawable/ic_close"
        android:background="@drawable/close_button_background"
        android:contentDescription="@string/ad_close_description"
        android:elevation="@dimen/ad_elevation_medium"
        android:visibility="gone" />

    <!-- Countdown Text -->
    <TextView
        android:id="@+id/countdown_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="@dimen/ad_margin_medium"
        android:text="Close in 5s"
        android:textSize="@dimen/ad_text_size_small"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/countdown_background"
        android:padding="@dimen/ad_padding_medium"
        android:elevation="@dimen/ad_elevation_medium" />

</FrameLayout>
